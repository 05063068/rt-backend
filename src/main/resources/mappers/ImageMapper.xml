<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--  
  TODO: Figure out filter and sort order

 -->

<mapper namespace="com.rottentomatoes.movieapi.mappers.ImageMapper">
    <select id="selectImageByIdAndType" resultMap="imageResultMap">
        SELECT CONCAT('${type}-' , id) AS id, img_width, img_height 
        FROM ${type}        
        WHERE id=#{id}
    </select>
    
    <select id="selectImagesForMovie" resultMap="imageResultMap" parameterType="map">
        SELECT CONCAT('movie_img-' , id) AS id, img_width, img_height
        FROM movie_img 
        WHERE movie_id=#{movie_id}      
    </select>

    <resultMap id="imageResultMap" type="com.rottentomatoes.movieapi.domain.model.Image">
        <id property="id" column="id" />
        <result property="originalWidth" column="img_width" />
        <result property="originalHeight" column="img_height" />
        
        <!-- 
        <result property="url" column="id" typeHandler="com.rottentomatoes.movieapi.mappers.ImageUrlTypeHandler"/>
         -->
    </resultMap>
</mapper>
