<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.rottentomatoes.movieapi.mappers.CharacterMapper">

    <select id="selectCharactersById" resultMap="characterResultMap">
        SELECT
        movie_character.id,
        movie_character.name
        FROM movie_character
        WHERE movie_character.id IN
        <foreach item="id" index="index" collection="ids" open="(" separator="," close=")">#{id}</foreach>
        <!-- TODO: make available deleted characters since there are quotes that make use of inactive characters AND movie_character.deleted_ind=0-->
    </select>

    <resultMap id="characterResultMap" type="com.rottentomatoes.movieapi.domain.model.Character">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
    </resultMap>


</mapper>


