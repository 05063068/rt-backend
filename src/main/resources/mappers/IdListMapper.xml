<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.rottentomatoes.movieapi.mappers.IdListMapper">

    <select id="selectSitemapMovieIds" resultMap="idListMap" parameterType="map">
        SELECT 'sitemap-movie-ids' AS list_id, movie_id AS item_id FROM movie LIMIT 10; 
    </select>
    
    <resultMap id="idListMap" type="com.rottentomatoes.movieapi.domain.model.IdList">
    	<id property="id" column="list_id" />
    
        <collection property="ids" javaType="list" ofType="java.lang.String">
            <result column="item_id"/>
        </collection>
    </resultMap>

</mapper>
