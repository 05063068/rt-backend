<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.rottentomatoes.movieapi.mappers.MovieMapper">
    <select id="selectMovieById" resultMap="movieResultMap">
        SELECT * FROM movie WHERE movie_id = #{id}
    </select>

    
    <resultMap id="movieResultMap" type="com.rottentomatoes.movieapi.domain.model.Movie">
        <id property="id" column="movie_id" />
        <result property="title" column="title"/>
       
        <collection property="movieCast" column="movie_id" select="com.rottentomatoes.movieapi.mappers.MovieCastMapper.selectPersonsForMovie" />
        
        <collection property="reviews" column="movie_id" select="com.rottentomatoes.movieapi.mappers.ReviewMapper.selectReviewsForMovie" />
    </resultMap>


</mapper>